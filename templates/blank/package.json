{
  "name": "@google-labs/{{name}}",
  "private": true,
  "version": "0.0.1",
  "description": "{{description}}",
  "main": "./dist/src/index.js",
  "exports": "./dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "wireit",
    "build": "wireit",
    "watch": "wireit",
    "lint": "wireit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/google/labs-prototypes"
  },
  "files": [
    "dist/src"
  ],
  "ava": {
    "timeout": "30s",
    "files": [
      "tests/**/*.ts"
    ],
    "workerThreads": false,
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsx"
    ]
  },
  "wireit": {
    "build": {
      "command": "tsc -b",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "dist/"
      ]
    },
    "watch": {
      "command": "tsc -b -w",
      "env": {
        "FORCE_COLOR": "1"
      }
    },
    "test": {
      "command": "ava",
      "env": {
        "FORCE_COLOR": "1"
      },
      "files": [
        "src/**/*.ts",
        "tests/**/*.ts"
      ]
    },
    "lint": {
      "command": "eslint . --ext .ts",
      "env": {
        "FORCE_COLOR": "1"
      }
    }
  },
  "keywords": [],
  "author": "Google Labs Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/google/labs-prototypes/issues"
  },
  "homepage": "https://github.com/google/labs-prototypes#readme",
  "devDependencies": {
    "tsx": "^4.6.2",
    "@ava/typescript": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@types/node": "^18.16.3",
    "ava": "^5.2.0",
    "typescript": "^5.0.4",
    "@google-labs/tsconfig": "*"
  }
}
